{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.1.0",
  "manifest_version": 2,
  "default_locale": "ja",
  "icons": {
    "16": "res/images/icon-16.png",
    "128": "res/images/icon-128.png"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "options_ui": {
    "page": "src/options/options.html",
    "chrome_style": true,
    "browser_style": true
  },
  "permissions": [
    "*://*.waseda.jp/*",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://iaidp.ia.waseda.jp/idp/profile/SAML2/Redirect/SSO?*"
      ],
      "js": [
        "src/autoLogin/myWasedaLoginPage.js"
      ]
    },
    {
      "matches": [
        "https://wsdmoodle.waseda.jp/mod/assign/view.php?*"
      ],
      "js": [
        "src/submissionPage/checkNotesOnSubmitting/contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "src/autoLogin/autoLoginPage.html",
    "res/videos/dummyVideo.mp4"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "better-waseda-moodle@mkihr-ojisan.com",
      "strict_min_version": "59.0"
    }
  }
}